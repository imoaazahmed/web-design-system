{
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "commonjs",
      "skipLibCheck": true,
      "jsx": "react"
    },
    "exclude": ["node_modules"]
  },
  "compilerOptions": {
    "outDir": "./dist/",
    "strict": true,
    "declaration": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "importHelpers": true,
    "lib": ["dom", "esnext"],
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react"
  },
  "exclude": ["node_modules", "**/*/*.stories.tsx"]
}
